		{
			"name": "Mutations",
			"item": [
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "mutation CreateUser($userInput: UserInput!) {\n  createUser(userInput: $userInput) {\n    id\n    name\n    email\n    age\n  }\n}",
								"variables": "{\n  \"userInput\": {\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"age\": 30\n  }\n}"
							}
						},
						"url": {
							"raw": "{{base_url}}/graphql",
