						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "mutation UpdateUser($id: Int!, $userInput: UserInput!) {\n  updateUser(id: $id, userInput: $userInput) {\n    id\n    name\n    email\n    age\n  }\n}",
								"variables": "{\n  \"id\": 1,\n  \"userInput\": {\n    \"name\": \"John Doe Updated\",\n    \"email\": \"john.updated@example.com\",\n    \"age\": 31\n  }\n}"
