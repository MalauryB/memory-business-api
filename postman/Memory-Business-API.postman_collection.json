						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "query GetUser($id: Int!) {\n  user(id: $id) {\n    id\n    name\n    email\n    age\n  }\n}",
								"variables": "{\n  \"id\": 1\n}"
							}
						},
						"url": {
							"raw": "{{base_url}}/graphql",
